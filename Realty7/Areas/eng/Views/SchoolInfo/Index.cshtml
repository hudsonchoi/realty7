@{
    ViewBag.Title = "Realty 7 LLC :: School Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#town-info").addClass("active");
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            $("#pc-menu").hide();
        } else {
            $("#mobile-menu").hide();
        }
    });
</script>
<style>
    #mobile-banner {
        width: 100%;
        height: auto;
    }

    .side-menu {
        margin: 10px 10px 10px 50px;
    }
</style>
<div class="main">
    <img id="mobile-banner" src="~/Content/images/info.jpg" class="img-responsive animated fadeIn" />

    <div class="row">

        <div class="col-md-3" id="pc-menu">
            <div class="side-menu">@Html.ActionLink("Town Info", "Index", "TownInfo")</div>
            <div class="side-menu">School Info</div>
            <div class="side-menu">@Html.ActionLink("Transportation", "Index", "Transportation")</div>
        </div>
        <div class="col-md-9" style="text-align:center">
            <a href="https://education.state.nj.us/directory/" target="_blank"><img src="~/Content/images/school1.gif" /></a>
            <a href="http://nces.ed.gov/" target="_blank"><img src="~/Content/images/school2.gif" /></a>
        </div>
    </div>

    <div class="row" id="mobile-menu" style="text-align:center">
        <div class="col-md-4">
            @Html.ActionLink("Town Info", "Index", "TownInfo")
        </div>
        <div class="col-md-4">
            School Info
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Transportation", "Index", "Transportation")
        </div>
    </div>
</div>
