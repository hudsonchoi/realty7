@{
    ViewBag.Title = "Realty 7 LLC :: Transportation";
    Layout = "~/Views/Shared/_LayoutKor.cshtml";
}

<script type="text/javascript">
    $(function () {
        $("#town-info").addClass("active");
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            $("#banner").hide();
            $("#pc-menu").hide();
        } else {
            $("#mobile-menu").hide();
            $("#mobile-banner").hide();
        }
    });
</script>
<style>
    #mobile-banner {
        width: 100%;
        height: auto;
    }
   .side-menu {
        margin:10px 10px 10px 50px;
    }
</style>
<embed name="banner" width="940" height="229" id="banner" src="/Content/flash/banner.swf" type="application/x-shockwave-flash" wmode="transparent" quality="high" bgcolor="#ffffff"/>
<img id="mobile-banner" src="~/Content/images/bannerHome.png" />

      <div class="row">
       <div class="col-md-3" id="pc-menu">
            <div class="side-menu">@Html.ActionLink("타운 소개", "Index", "TownInfo")</div>
            <div class="side-menu">@Html.ActionLink("학군 정보", "Index", "SchoolInfo")</div>
            <div class="side-menu">교통 정보</div>
       </div>
        <div class="col-md-9">
            
            <a href="http://www.njtransit.com/hp/hp_servlet.srv?hdnPageAction=HomePageTo" target="_blank">
                <img src="~/Content/images/njt.gif" /></a>
            <a href="http://www.panynj.gov/" target="_blank">
                <img src="~/Content/images/port.gif" /></a>

        </div>
      </div>

    <div class="row" id="mobile-menu" style="text-align:center">
        <div class="col-md-4">
            @Html.ActionLink("Town Info", "Index", "TownInfo")
        </div>
        <div class="col-md-4">
            @Html.ActionLink("School Info", "Index", "SchoolInfo")
        </div>
        <div class="col-md-4">
            Transporation
        </div>
    </div>
