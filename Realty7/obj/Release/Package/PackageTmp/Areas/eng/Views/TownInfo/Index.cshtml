@{
    ViewBag.Title = "Realty 7 LLC :: Town Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    $(function () {
        $("#town-info").addClass("active");
        if (/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent)) {
            $("#banner").hide();
            $("#pc-menu").hide();
        } else {
            $("#mobile-menu").hide();
            $("#mobile-banner").hide();
        }
    });
</script>
<style>
    #mobile-banner {
        width: 100%;
        height: auto;
    }
    .side-menu {
        margin:10px 10px 10px 50px;
    }
</style>
<embed name="banner" width="940" height="229" id="banner" src="/Content/flash/banner.swf" type="application/x-shockwave-flash" wmode="transparent" quality="high" bgcolor="#ffffff"/>
<img id="mobile-banner" src="~/Content/images/bannerHome.png" />

      <div class="row">

        <div class="col-md-3" style="border-right-style:solid; border-right-width:1px" id="pc-menu">
            <div class="side-menu">Town Info</div>
            <div class="side-menu">@Html.ActionLink("School Info", "Index", "SchoolInfo")</div>
            <div class="side-menu">@Html.ActionLink("Transportation", "Index", "Transportation")</div>
       </div>
        <div class="col-md-9" style="padding-top:10px; padding-left:60px">
            <div class="TownInfo">
                <div style="background-color:white">
                    <a href="http://www.njmls.com/communities/" target="_blank"><img src="~/Content/images/NJMLS.png" /><br />
                        <b>Click Here</b>
                    </a>
                </div>
            </div>
        </div>
      </div>

    <div class="row" id="mobile-menu" style="text-align:center">
        <div class="col-md-4">
            Town Info
        </div>
        <div class="col-md-4">
            @Html.ActionLink("School Info", "Index", "SchoolInfo")
        </div>
        <div class="col-md-4">
            @Html.ActionLink("Transportation", "Index", "Transportation")
        </div>
    </div>
